@using RealEstate_Mvc_.Dtos

@model CustomerRequestModel;
@if (ViewBag.Message != null)
{
        <div class="alert alert-danger">
        @ViewBag.Message
        </div>
}
<div class="container d-flex align-items-center justify-content-center">
    <div class="card p-4 shadow-sm w-100" style="max-width: 650px;">
        <h3 class="text-center mb-4">Create Property</h3>
        <form asp-action="Register" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">FirstName</label>
                <input type="text" class="form-control" placeholder="FirstName" asp-for="FirstName" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">LastName</label>
                <input type="text" class="form-control" placeholder="LastName" asp-for="LastName" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="Email" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                <input type="tel" class="form-control" placeholder="PhoneNumber" asp-for="PhoneNumber" />
            </div>
            <div class="mb-3">
                <label asp-for="Age" class="form-label">Age</label>
                <input type="number" class="form-control" placeholder="Age" asp-for="Age" />
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" placeholder="1,wall road" asp-for="Address" />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="Password" class="form-control" placeholder="......." asp-for="Password" />
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword" />
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select class="form-control" asp-for="Gender">
                    <option value="">Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <br>
            <div class="mb-3">
                <label asp-for="ProfilePicture" class="form-label"></label>
                <input type="file" class="form-control" asp-for="ProfilePicture" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input asp-controller="Customer" asp-action="CreateCustomer" type="submit" value="Submit " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
